<?xml version="1.0" encoding="UTF-8"?>
<project name="navtag" default="install" basedir=".">
	<property name="root" value="${user.home}"/>
	<property name="libdir" value="${root}/lib/navmod"/>
	<property name="bindir" value="${root}/bin"/>

	<target name ="makejar" description="Create a jar">
		<jar jarfile="comm.jar"> <fileset dir="bin"/> </jar>
	</target>
	
	<target name="cleanjar" description="Remove jar"> 
		<delete file="comm.jar"/> 
	</target>

	<target name="install" description="Install the application" depends="makejar">
		<mkdir dir="${libdir}"/>
		<copy todir="${libdir}" file="comm.jar"/>
		<copy todir="${libdir}" file="../NavInliner/inliner.jar"/>
		<copy todir="${libdir}" file="MarkGUI.aj"/>
		<copy todir="${bindir}" file="navmod.sh"/>
		<chmod perm="uog+rx" file="${bindir}/navmod.sh"/>
	</target>
</project>