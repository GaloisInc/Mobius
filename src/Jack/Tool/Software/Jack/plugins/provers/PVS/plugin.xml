<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin
   id="Pvsplugin"
   name="Pvs plug-in"
   version="1.3.1"
   provider-name=""
   class="pvsPlugin.PvsPlugin">

   <runtime>
      <library name="Pvsplugin.jar">
         <export name="*"/>
      </library>
   </runtime>
   <requires>
      <import plugin="org.eclipse.core.runtime"/>
      <import plugin="org.eclipse.ui.ide"/>
      <import plugin="org.eclipse.ui.views"/>
      <import plugin="org.eclipse.jface.text"/>
      <import plugin="org.eclipse.ui.workbench.texteditor"/>
      <import plugin="org.eclipse.ui.editors"/>
      <import plugin="org.eclipse.core.resources"/>
      <import plugin="org.eclipse.ui"/>
      <import plugin="jack.plugin"/>
      <import plugin="org.eclipse.jdt.core"/>
      <import plugin="JackRequiredPlugins"/>
   </requires>


   <extension
         point="jack.plugin.Prover">
      <language
            translationResultClass="pvsPlugin.PvsTranslationResult"
            name="PVS"
            languageClass="pvsPlugin.PvsLanguage"
            printerClass="pvsPlugin.PvsPrinter"
            interactiveProverClass="pvsPlugin.PvsInteractive"
            proverStatusClass="pvsPlugin.PvsProverStatus"
			proofTaskClass="pvsPlugin.PvsProofTask"
            id="prover.pvs">
      </language>
   </extension>
   
   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            objectClass="org.eclipse.jdt.core.ICompilationUnit"
            id="jack.plugin.compile.CompileAction">
         <action
               label="with PVS"
               class="pvsPlugin.PvsProveAction"
               menubarPath="jack_source_menu/prover/prover_slot"
               id="jack.plugin.provePVSAction">
         </action>
      </objectContribution>
   </extension>

   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            objectClass="org.eclipse.core.resources.IFile"
            nameFilter="*.jpo"
            id="jack.plugin.compile.CompileAction">
         <action
               label="with PVS"
               class="pvsPlugin.PvsProveAction"
               menubarPath="jack_menu_jpo/prover_jpo/prover_slot_jpo"
               id="jack.plugin.provePVSAction">
         </action>
      </objectContribution>
   </extension>

    <extension
         point="org.eclipse.ui.preferencePages">
      <page
            name="PVS prover"
            category="jack.plugin.JackPreferencePageProvers"
            class="pvsPlugin.PvsPreferencePage"
            id="Pvsplugin.PvsPreferencePage">
      </page>
   </extension>

</plugin>
