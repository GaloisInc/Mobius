<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin>
   <extension point="org.eclipse.ui.editors">
      <editor
            id="umbra.BytecodeEditor"
            name="Bytecode Editor"
            class="umbra.editor.BytecodeEditor"
            contributorClass="umbra.editor.BytecodeEditorContributor"
            icon="icons/bytecode_file.gif"
            extensions="btc"
            default="true"
      />
   </extension>
   <extension point="org.eclipse.ui.editorActions">
      <editorContribution
            targetID="org.eclipse.jdt.ui.CompilationUnitEditor"
            id="umbra.javaEditorContribution">
         <menu
               label="&amp;Bytecode"
               id="umbra.bytecodeMenu">
               <separator name="showGroup"/>
         </menu>
         <action
               toolbarPath="showGroup"
               label="Disassemble"
               tooltip="Disassemble byte code"
               icon="icons/disassemble.gif"
               class="umbra.java.actions.DisasBCEL"
               menubarPath="umbra.bytecodeMenu/showGroup"
               id="umbra.BCELTest"/>
         <action
               toolbarPath="showGroup"
               label="Show byte code"
               tooltip="Show byte code of selected statement"
               class="umbra.java.actions.SynchrSBAction"
               icon="icons/synchronize.gif"
               menubarPath="umbra.bytecodeMenu/showGroup"
               id="umbra.synchrAction"/>
         <action
               class="umbra.java.actions.CommitAction"
               icon="icons/commit.gif"
               id="umbra.commit"
               label="Combine Changes with Bytecode"
               menubarPath="umbra.bytecodeMenu/showGroup"
               toolbarPath="showGroup"/>
      </editorContribution>
      <editorContribution
            targetID="umbra.BytecodeEditor"
            id="umbra.bytecodeEditorContribution">
         <menu
               label="&amp;Byte code"
               id="umbra.bytecodeMenu">
               <separator name="synchrGroup"/>
               <separator name="verifyGroup"/>
               <separator name="historyGroup"/>
               <separator name="helpGroup"/>
         </menu>
         <action
               toolbarPath="historyGroup"
               label="&amp;Add to history"
               tooltip="Add to history"
               class="umbra.editor.actions.history.HistoryAction"
               icon="icons/add_to_history.gif"
               menubarPath="umbra.bytecodeMenu/historyGroup"
               id="umbra.history"/>
         <action
               toolbarPath="historyGroup"
               label="&amp;Clear history"
               tooltip="Clear history"
               class="umbra.editor.actions.history.ClearHistoryAction"
               icon="icons/clear_history.gif"
               menubarPath="umbra.bytecodeMenu/historyGroup"
               id="umbra.clearHistory"/>
         <action
               toolbarPath="helpGroup"
               label="&amp;Installation info"
               tooltip="Installation info"
               class="umbra.editor.actions.info.InstalInfoAction"
               icon="icons/help.gif"
               menubarPath="umbra.bytecodeMenu/helpGroup"
               id="umbra.instalInfo"/>
         <action
               toolbarPath="helpGroup"
               label="&amp;User guide"
               tooltip="User guide"
               class="umbra.editor.actions.info.UserGuideAction"
               icon="icons/help.gif"
               menubarPath="umbra.bytecodeMenu/helpGroup"
               id="umbra.userGuide"/>
      </editorContribution>
   </extension>
<!-- ============================================== -->
<!-- Define the main book                           -->
<!-- ============================================== -->
   <extension
         point="org.eclipse.help.toc">
      <toc
            file="help/index.xml"
            primary="true">
      </toc>
   </extension>
<!-- =============================================== -->
<!-- Link the sections into the book                 -->
<!-- =============================================== -->
   <extension
         point="org.eclipse.help.toc">
      <toc
            file="help/toc_user_guide.xml">
      </toc>
      <toc
            file="help/toc_programmers_guide.xml">
      </toc>
      <toc
            file="help/toc_reference.xml">
      </toc>
   </extension>
</plugin>
