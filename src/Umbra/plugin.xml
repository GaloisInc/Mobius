<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin>

   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="umbra.editor.BytecodeEditor"
            icon="icons/b01m.gif"
            default="true"
            name="Bytecode Editor"
            contributorClass="umbra.editor.BytecodeEditorContributor"
            id="umbra.BytecodeEditor"
            extensions="btc"/>
   </extension>
   <extension
         point="org.eclipse.ui.editorActions">
      <editorContribution
            targetID="org.eclipse.jdt.ui.CompilationUnitEditor"
            id="umbra.javaEditorContribution">
         <menu
               label="&amp;Bytecode"
               id="umbra.bytecodeMenu">
               <separator name="showGroup"/>
         </menu>      
         <action
               toolbarPath="showGroup"
               label="Disassemble"
               tooltip="Disassemble"
               icon="icons/b01m.gif"
               class="umbra.actions.DisasBCEL"
               menubarPath="umbra.bytecodeMenu/showGroup"
               id="umbra.BCELTest"/>
         <action
               toolbarPath="showGroup"
               label="Synchronize"
               tooltip="Synchronize"
               class="umbra.actions.SynchrSBAction"
               icon="icons/synchr.bmp"
               menubarPath="umbra.bytecodeMenu/showGroup"
               id="umbra.synchrAction"/>
         <action
               class="umbra.actions.CommitAction"
               icon="icons/sample.gif"
               id="umbra.commit"
               label="Commit"
               menubarPath="umbra.bytecodeMenu/showGroup"
               style="push"
               toolbarPath="showGroup"/>
      </editorContribution>
      <editorContribution
            targetID="umbra.BytecodeEditor"
            id="umbra.bytecodeEditorContribution">
         <menu
               label="&amp;Bytecode"
               id="umbra.bytecodeMenu">
               <separator name="synchrGroup"/>
               <separator name="historyGroup"/>
               <separator name="helpGroup"/>
         </menu>      
         <action
               toolbarPath="historyGroup"
               label="&amp;Add to history"
               tooltip="Add to history"
               class="umbra.history.HistoryAction"
               icon="icons/addH.GIF"
               menubarPath="umbra.bytecodeMenu/historyGroup"
               id="umbra.history"/>
         <action
               toolbarPath="historyGroup"
               label="&amp;Clear history"
               tooltip="Clear history"
               class="umbra.history.ClearHistoryAction"
               icon="icons/clearH.GIF"
               menubarPath="umbra.bytecodeMenu/historyGroup"
               id="umbra.clearHistory"/>
         <action
               toolbarPath="helpGroup"
               label="&amp;Installation Info"
               tooltip="Installation Info"
               class="umbra.info.InstalInfoAction"
               icon="icons/info.gif"
               menubarPath="umbra.bytecodeMenu/helpGroup"
               id="umbra.instalInfo"/>
         <action
               toolbarPath="helpGroup"
               label="&amp;User Guide"
               tooltip="User Guide"
               class="umbra.info.UserGuideAction"
               icon="icons/help.gif"
               menubarPath="umbra.bytecodeMenu/helpGroup"
               id="umbra.userGuide"/>
      </editorContribution>
   </extension>

</plugin>
