<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.3"?>
<plugin>

   <extension
         point="org.eclipse.ui.commands">
      <category
            description="JML2 Plug-in Category"
            id="jml-plugin.commands"
            name="JML2 Plug-in">
      </category>
      <command
            categoryId="jml-plugin.commands"
            description="Run the JML2 checker on the current file"
            id="jml-plugin.runChecker"
            name="Run JML2 checker">
      </command>
      <command
            categoryId="jml-plugin.commands"
            description="Run the JML2 RAC compiler on the current file"
            id="jml-plugin.runCompiler"
            name="Run JML2 compiler">
      </command>
      <command
            categoryId="jml-plugin.commands"
            description="Run the JML2 exec tool on the current file"
            id="jml-plugin.runExec"
            name="Run JML2 exec">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="jml-plugin.runChecker"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="Ctrl+J C">
      </key>
      <key
            commandId="jml-plugin.runCompiler"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="Ctrl+J R">
      </key>
      <key
            commandId="jml-plugin.runExec"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="Ctrl+J E">
      </key>
   </extension>

