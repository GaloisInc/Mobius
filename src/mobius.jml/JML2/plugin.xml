   <extension
         point="org.eclipse.ui.views">
      <view
            category="org.eclipse.jdt.ui.java"
            class="ch.ethz.inf.pm.jml.plugin.internal.ui.errors.JmlErrorView"
            id="ch.ethz.inf.pm.jml.plugin.ui.JmlErrorView"
            name="JML2 Errors"/>
   </extension>
   <extension
         point="org.eclipse.debug.core.launchConfigurationTypes">
      <launchConfigurationType
            delegate="ch.ethz.inf.pm.jml.plugin.internal.core.JmlRacLaunchConfigurationDelegate"
            delegateDescription="Run with JML2 runtime assertion checking libraries."
            id="ch.ethz.inf.pm.jml.plugin.LaunchConfiguration.JmlRac"
            modes="run"
            name="JML2 RAC"
            sourceLocatorId="org.eclipse.jdt.launching.sourceLocator.JavaSourceLookupDirector"
            sourcePathComputerId="org.eclipse.jdt.launching.sourceLookup.javaSourcePathComputer"/>
   </extension>
   <extension
         point="org.eclipse.debug.ui.launchConfigurationTypeImages">
      <launchConfigurationTypeImage
            configTypeID="ch.ethz.inf.pm.jml.plugin.LaunchConfiguration.JmlRac"
            icon="icons/jml_logo.gif"
            id="jml-plugin.LaunchConfigurationTypeImage.JmlRac"/>
   </extension>
   <extension
         point="org.eclipse.debug.ui.launchConfigurationTabGroups">
      <launchConfigurationTabGroup
            class="ch.ethz.inf.pm.jml.plugin.internal.ui.rac.JmlRacLaunchConfigurationTabGroup"
            id="jml-plugin.LaunchConfigurationTabGroup.JmlRac"
            type="ch.ethz.inf.pm.jml.plugin.LaunchConfiguration.JmlRac"/>
   </extension>
   <extension
         point="org.eclipse.debug.ui.launchShortcuts">
      <shortcut
            class="ch.ethz.inf.pm.jml.plugin.internal.ui.rac.JmlRacLaunchShortcut"
            description="Run with JML2 runtime assertion checking libraries."
            icon="icons/jml_logo.gif"
            id="jml-plugin.LaunchShortcut.JmlRac"
            label="JML2 RAC"
            modes="run">
         <contextualLaunch>
            <contextLabel
                  label="JML2 RAC"
                  mode="run"/>
            <enablement>
               <with variable="selection">
                  <count value="1"/>
               </with>
            </enablement>
         </contextualLaunch>
      </shortcut>
   </extension>
   <extension
         point="org.eclipse.ui.propertyPages">
      <page
            class="ch.ethz.inf.pm.jml.plugin.internal.ui.properties.JmlRootPropertiesPage"
            id="jml-plugin.jmlRootPropertiesPage"
            name="JML2 Plug-in">
            <enabledWhen>
              <or>
            	<instanceof value="org.eclipse.core.resources.IProject"/>
            	<instanceof value="org.eclipse.jdt.core.IJavaProject"/>
              </or>
            </enabledWhen>
      </page>

      <page
            category="jml-plugin.jmlRootPropertiesPage"
            class="ch.ethz.inf.pm.jml.plugin.internal.ui.properties.JmlCheckerPropertiesPage"
            id="jml-plugin.jmlCheckerPropertiesPage"
            name="JML2 Checker">
            <enabledWhen>
              <or>
            	<instanceof value="org.eclipse.core.resources.IProject"/>
            	<instanceof value="org.eclipse.jdt.core.IJavaProject"/>
              </or>
            </enabledWhen>
      </page>

      <page
            category="jml-plugin.jmlRootPropertiesPage"
            class="ch.ethz.inf.pm.jml.plugin.internal.ui.properties.JmlCompilerPropertiesPage"
            id="jml-plugin.jmlCompilerPropertiesPage"
            name="JML2 Compiler">
            <enabledWhen>
              <or>
            	<instanceof value="org.eclipse.core.resources.IProject"/>
            	<instanceof value="org.eclipse.jdt.core.IJavaProject"/>
              </or>
            </enabledWhen>
      </page>
           
      <page
            category="jml-plugin.jmlRootPropertiesPage"
            class="ch.ethz.inf.pm.jml.plugin.internal.ui.properties.JmlRacPropertiesPage"
            id="jml-plugin.jmlRacPropertiesPage"
            name="JML2 RAC">
            <enabledWhen>
              <or>
            	<instanceof value="org.eclipse.core.resources.IProject"/>
            	<instanceof value="org.eclipse.jdt.core.IJavaProject"/>
              </or>
            </enabledWhen>
      </page>   
   </extension>
   
   <extension
         id="error"
         name="JML2 Error"
         point="org.eclipse.core.resources.markers">
      <super type="org.eclipse.core.resources.problemmarker"/>
      <persistent value="true"/>
   </extension>

   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            id="jml-plugin.toolbar"
            label="JML2 plug-in toolbar"
            visible="false">
         <menu
               id="JMLMenu"
               label="JML2">
            <separator
                  name="JMLGroup">
            </separator>
         </menu>   
         <action
               class="ch.ethz.inf.pm.jml.plugin.internal.ui.RunJmlExecAction"
               definitionId="jml-plugin.runExec"
               icon="icons/jml_exec.gif"
               id="jml-plugin.runjmlexec.action"
               label="Run JML2 exec"
               toolbarPath="Normal/additions"
               menubarPath="JMLMenu/JMLGroup"/>
         <action
               class="ch.ethz.inf.pm.jml.plugin.internal.ui.RunJmlCompilerAction"
               definitionId="jml-plugin.runCompiler"
               icon="icons/jml_compiler.gif"
               id="jml-plugin.runjmlcompiler.action"
               label="Run JML2 compiler"
               toolbarPath="Normal/additions"
               menubarPath="JMLMenu/JMLGroup"/>
         <action
               class="ch.ethz.inf.pm.jml.plugin.internal.ui.RunJmlCheckerAction"
               definitionId="jml-plugin.runChecker"
               icon="icons/jml_checker.gif"
               id="jml-plugin.runjmlchecker.action"
               label="Run JML2 checker"
               toolbarPath="Normal/additions"
               menubarPath="JMLMenu/JMLGroup"/>
         <menu
               id="jml-plugin.toolbar"
               label="JML2 plug-in toolbar"
               path="additions">
         </menu>
      </actionSet>
   </extension>

   <extension
          point="org.eclipse.ui.editors.templates">
       <template
             autoinsert="true"
             contextTypeId="java"
             description="JML lightweight method specification."
             id="jml-plugin.template.method.light"
             name="jmll">
          <pattern>
/ *@ requires P;
  @ assignable X;
  @ ensures Q;
  @ signals (Exception) R;
  @*/
          </pattern>
       </template>
       
       <template
             autoinsert="true"
             contextTypeId="java"
             description="JML heavyweight method specification."
             id="jml-plugin.template.method.heavy"
             name="jmlh">
          <pattern>
/ *@ protected behavior
  @ requires P;
  @ diverges false;
  @ assignable X;
  @ when \not_specified;
  @ working_space \not_specified;
  @ duration \not_specified;
  @ ensures Q;
  @ signals_only Exception;
  @ signals (Exception) R;
  @*/
          </pattern>
       </template>
       
	   <template
             autoinsert="true"
             contextTypeId="java"
             description="JML object invariant specification."
             id="jml-plugin.template.invariant"
             name="jmli">
          <pattern>
/ *@ invariant I; @*/
          </pattern>
       </template>       
   </extension>
   
   <extension
         id="ch.ethz.inf.pm.jml.plugin.CheckerBuilder"
         name="JML2 Checker Project Builder"
         point="org.eclipse.core.resources.builders">
      <builder
            hasNature="true">
         <run
               class="ch.ethz.inf.pm.jml.plugin.internal.core.builder.JmlCheckerBuilder">
         </run>
      </builder>
   </extension>
   
   <extension
         id="ch.ethz.inf.pm.jml.plugin.CheckerNature"
         name="JML2 Checker Project Nature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="ch.ethz.inf.pm.jml.plugin.internal.core.builder.JmlCheckerNature">
         </run>
      </runtime>
      <builder
            id="ch.ethz.inf.pm.jml.plugin.CheckerBuilder">
      </builder>
   </extension>
   
