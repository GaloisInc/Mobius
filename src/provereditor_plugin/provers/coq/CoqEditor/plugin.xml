<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin>

   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="mobius.prover.gui.editor.ProverEditor"
            contributorClass="org.eclipse.ui.editors.text.TextEditorActionContributor"
            extensions="v"
            icon="icons/coq.gif"
            id="coq.CoqEditor"
            name="CoqEditor">
      </editor>
   </extension>

   <extension
         point="prover.editor.prover">
      <language
            extension=".v"
            name="Coq"
            translator="mobius.prover.coq.CoqProverTranslator"
            provertoplevel="mobius.prover.coq.BasicCoqTop"/>
   </extension>

</plugin>
