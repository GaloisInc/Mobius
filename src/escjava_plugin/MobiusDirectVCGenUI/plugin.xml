<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <view
            class="mobius.directVCGen.ui.poview.ProjectProofs"
            icon="icons/tool.gif"
            id="CoqMobiusUI.view"
            name="POsExplorer"/>
   </extension>
   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            id="MobiusDirectVCGenUI.actions"
            label="DirectVCGenUI"
            visible="true">
         <action
               class="mobius.directVCGen.ui.poview.CompileAction"
               enablesFor="1"
               icon="icons/Hammer.gif"
               id="MobiusDirectVCGenUI.compile"
               label="Generate the Proof Obligations"
               style="push"
               toolbarPath="MobiusDirectVCGen.actions">
         </action>
      </actionSet>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="mobius.directVCGen.ui.poview.PerspectiveFactory"
            icon="icons/mobius_logo_sm.gif"
            id="MobiusDirectVCGenUI.perspective1"
            name="Mobius">
      </perspective>
   </extension>

</plugin>
